{% extends "_layout.twig" %}

{% block javascripts %}
    <script src="/public/js/message.js"></script>
    <script src="/public/js/notification.js"></script>
{% endblock javascripts %}


{% block menu %}
    {% if isConnected %}
        <li class="nav-item"></li>
            <a class="nav-link" href="/login/logout">Se d√©connecter</a>
        <li>
        <li class="nav-item" >
            <a class="nav-link" href="/account">Mon compte</a>
        </li>
        <li class="nav-item"></li>
            <a class="nav-link" href="/messages/write">Ecrire un message</a>
        <li>
    {% else %}
        <li class="nav-item"></li>
        <a class="nav-link" href="/login">Se connecter</a>
        <li>
    {% endif %}
    {% if isAuthorized('users.defaut') %}
        <li class="nav-item" >
            <a class="nav-link" href="/users">Gestion des utilisateurs</a>
        </li>
    {% endif %}
    {% if isAuthorized('rights.defaut') %}
        <li class="nav-item" >
            <a class="nav-link" href="/rights">Gestion des droits</a>
        </li>
    {% endif %}
{% endblock menu %}

{% block notification %}
    <li class="nav-right nav-item">
        {% if isConnected %}
            <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                    <span class="label label-pill label-danger count" style="border-radius:10px;"></span>
                    <i class="fas fa-bell"></i>
                </a>
                <ul class="dropdown-menu"></ul>
            </li>
        {% endif %}
    </li>
{% endblock notification %}

{% block content %}
    {{ msg_accueil }}
{% endblock content %}


